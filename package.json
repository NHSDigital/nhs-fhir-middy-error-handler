{
  "name": "jackspagnolinhs-semantic-release-testing",
  "version": "1.0.0",
  "description": "A variant of the Middy Error Handler for use in a FHIR AWS lambda.",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --fix",
    "test": "POWERTOOLS_DEV=true NODE_OPTIONS=--experimental-vm-modules jest --no-cache --coverage",
    "check-licenses": "license-checker --failOn GPL --failOn LGPL"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackspagnolinhs/semantic-release-testing.git"
  },
  "keywords": [],
  "author": "Jack Spagnoli",
  "license": "MIT",
  "private": false,
  "type": "module",
  "devDependencies": {
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "eslint-plugin-import-newlines": "^1.3.4",
    "prettier": "^3.2.4",
    "@typescript-eslint/parser": "^6.19.1",
    "license-checker": "^25.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.11",
    "semantic-release": "^23.0.0",
    "conventional-changelog-eslint": "^5.0.0",
    "ts-node": "^10.4.0"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@middy/core": "^5.2.3"
  },
  "bugs": {
    "url": "https://github.com/jackspagnolinhs/semantic-release-testing/issues"
  },
  "homepage": "https://github.com/jackspagnolinhs/semantic-release-testing#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint",
          "releaseRules": [
            {
              "reminder": "Please update CONTRIBUTING.md if you change this",
              "release": false
            },
            {
              "tag": "Fix",
              "release": "patch"
            },
            {
              "tag": "Update",
              "release": "patch"
            },
            {
              "tag": "New",
              "release": "minor"
            },
            {
              "tag": "Breaking",
              "release": "major"
            },
            {
              "tag": "Docs",
              "release": "patch"
            },
            {
              "tag": "Build",
              "release": false
            },
            {
              "tag": "Upgrade",
              "release": "patch"
            },
            {
              "tag": "Chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "lib/index.js",
              "label": "index.js"
            },
            {
              "path": "lib/index.d.ts",
              "label": "index.d.ts"
            },
            {
              "path": "lib/index.js.map",
              "label": "index.js.map"
            },
            {
              "path": "package.json",
              "label": "package.json"
            }
          ],
          "successComment": false,
          "failComment": false,
          "failTitle": false
        }
      ]
    ]
  }
}
